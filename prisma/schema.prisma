generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Cadastro {
  id             String  @unique
  nomeCompleto   String
  cpf            String  @unique
  email          String  @unique
  dataNascimento String
  telefone       String
  rua            String
  numero         String
  complemento    String
  cep            String
  senha          String
  membro         Boolean
}

model Evento {
  id             String  @unique
  nome           String
  descricao      String 
  localizacao    String
  valor          Decimal @default(0)
  data           String
  arquivo        Bytes
}

model Ingresso {
  id            String @unique
  nomeEvento    String
  pago          Boolean
  dataExpiracao String
  valor         Decimal
  cpf           String
}


