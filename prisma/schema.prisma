generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Cadastro {
  id             String  @unique
  nomeCompleto   String
  cpf            String  @unique
  email          String  @unique
  dataNascimento String
  telefone       String
  rua            String
  numero         String
  complemento    String
  cep            String
  senha          String
  membro         Boolean
}

model Evento {
  id          String  @unique
  nome        String
  descricao   String
  localizacao String
  valor       Decimal @default(0)
  data        String
  arquivo     Bytes
}

model Ingresso {
  id          String    @id @unique
  nomePessoa  String
  cpf         String
  email       String
  telefone    String
  tipo        String
  ingressosId String
  ingressos   Ingressos @relation(fields: [ingressosId], references: [id])
}

model Ingressos {
  id         String     @id @unique
  codigo     Int        @unique
  tickets    Ingresso[]
  total      Decimal
  pago       Boolean
  nomeEvento String
}
